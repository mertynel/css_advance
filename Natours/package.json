{
  "name": "natours",
  "version": "1.0.0",
  "description": "landing page for natours",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss starter/css/style.css -w",
    "devserver":  "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "node-sass sass/main.scss starter/css/style.comp.css -w",
    "concat:css": "concat -o starter/css/style.concat.css starter/css/icon-font.css starter/css/style.comp.css",
    "prefix:css": "postcss starter/css/style.concat.css --use autoprefixer -b 'last 10 version' -o starter/css/style.prefix.css",
    "compress:css": "node-sass starter/css/style.css starter/css/style.min.css --style compressed",
    "buil": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "concat": "^1.0.3",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0"
  }
}
